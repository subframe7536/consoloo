{
  "name": "consoloo",
  "type": "module",
  "version": "2.0.0",
  "description": "colorful logger for nodejs and browser",
  "author": "subframe7536",
  "license": "MIT",
  "repository": "https://github.com/subframe7536/consoloo",
  "keywords": [
    "console",
    "logger"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./browser": {
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs"
    },
    "./core": {
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "browser.*",
    "core.*",
    "dist"
  ],
  "scripts": {
    "dev": "bun ./dev/index.html",
    "build": "tsdown",
    "test": "bun tests/index.test.ts",
    "test:clean": "bun tests/index.test.ts clean",
    "format": "eslint . --fix",
    "release": "pnpm test:clean && pnpm build && bumpp --all && npm publish"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@subframe7536/type-utils": "^0.2.0",
    "ansis": "^4.1.0",
    "normal-error": "^0.2.0"
  },
  "devDependencies": {
    "@subframe7536/eslint-config": "^1.3.2",
    "@types/node": "^22.17.1",
    "bumpp": "^10.2.2",
    "eslint": "^9.33.0",
    "tsdown": "^0.14.0",
    "typescript": "^5.9.2"
  }
}
